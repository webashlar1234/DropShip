
@{
    ViewBag.Title = "User Management";
}
<link href="~/Content/bootstrap-toggle.min.css" rel="stylesheet" />
<link href="~/Content/custom/user-management.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-toggle.min.js"></script>
<script src="~/Scripts/custom/userManagement.js"></script>

<!-- Add New User Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered  modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add New User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form role="form" method="post" action="@Url.Action("Index","Registration")" novalidate="" class="mb-lg form-horizontal" id="frmOperationalRegistration">
                    <input name="RoleID" type="hidden" value="2" />
                    <div class="form-group">
                        <label>UserName</label>
                        <input id="TxtUserName" value="" type="text" placeholder="UserName" autocomplete="off" required="required" class="form-control" name="UserName" maxlength="30" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input id="TxtEmail" value="" type="email" placeholder="Email" autocomplete="off" required="required" class="form-control" name="Email" maxlength="50" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" value="" id="TxtPassword" placeholder="Password" required="required" class="form-control" name="Password" maxlength="15" />
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" value="" id="TxtConfirmPassword" placeholder="Confirm Password" class="form-control" name="ConfirmPassword" maxlength="15" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" value="" id="TxtPhone" placeholder="Phone" class="form-control" name="Phone" maxlength="10" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" value="" id="TxtAddress" placeholder="Address" class="form-control" name="Address" maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select id="LstCountry" class="form-control" name="Country">
                            <option value="" selected disabled>Select a Country</option>
                            <option value="India">India</option>
                            <option value="USA">USA</option>
                            <option value="Russia">Russia</option>
                        </select>
                    </div>
            </div>
                <div class="modal-footer">
                    <button type="submit" onclick="operationalRegisterUser()" class="btn btn-submit col-lg-6 pull-right">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<section class="mt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 table-responsive  mb-5">
                <button type="button" class="btn btn-primary btn-add-new" data-toggle="modal" data-target="#exampleModalCenter"><i class="fa fa-plus-circle" aria-hidden="true"></i> &nbsp;Add New</button>
                <table id="operationalUserDT" class="display mt-2" style="width:100%">
                </table>
            </div>
        </div>
    </div>
</section>

