
@{
    ViewBag.Title = "jobLog";
    //Layout = "~/Views/Shared/_Layout.cshtml";

    <script src="~/Scripts/custom/jobLog.js"></script>

    <style>
        .innertable {
            margin-left: 2%;
            width: 98%;
            border: 1px lightgray solid;
        }
        .modal {
            z-index: 9999;
        }
    </style>
}

<section class="row">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <p class="tbl-title">
                    Job Log
                </p>
            </div>

        </div>
    </div>
</section>

<section class="row">
    <div class="container-fluid">
        <div class="col-lg-12 table-responsive  mb-5">
            <table id="jobLogDT" class="display" style="width:100%"></table>
        </div>
    </div>

    <div class="spinner" style="display:none"></div>    
</section>

<div class="modal fade" id="jobLogModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Job Logs Result</h3>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
            </div>
            <div class="modal-body">
                <pre id="json"></pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->