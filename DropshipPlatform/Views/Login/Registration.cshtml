
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Scripts/custom/Login.js"></script>
}

<div class="panel panel-default">
    <div class="panel-body">
        <section class="section-padding">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="registration-form">
                            <form role="form" method="post" action="@Url.Action("Registration","Login")" novalidate="" class="mb-lg form-horizontal" id="frmRegistration">
                                <div class="form-group">
                                    <label>UserName</label>
                                    <input id="TxtUserName" value="" type="text" placeholder="UserName" autocomplete="off" required="required" class="form-control" name="UserName" maxlength="30" />
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input id="TxtEmail" value="" type="email" placeholder="Email" autocomplete="off" required="required" class="form-control" name="Email" maxlength="50" />
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" value="" id="TxtPassword" placeholder="Password" required="required" class="form-control" name="Password" maxlength="15" />
                                </div>
                                <div class="form-group">
                                    <label>Password:</label>
                                    <input type="password" value="" id="TxtConfirmPassword" placeholder="Confirm Password" class="form-control" name="ConfirmPassword" maxlength="15" />
                                </div>
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" value="" id="TxtPhone" placeholder="Phone" class="form-control" name="Phone" maxlength="10" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
                                </div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <input type="text" value="" id="TxtAddress" placeholder="Address" class="form-control" name="Address" maxlength="100" />
                                </div>
                                <div class="form-group">
                                    <label>Country</label>
                                    <select id="LstCountry" class="form-control" name="Country">
                                        <option value="" selected disabled>Select a Country</option>
                                        <option value="1">India</option>
                                        <option value="2">USA</option>
                                        <option value="3">Russia</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <a href="@Url.Action("Index", "Login")" class="btn-link col-lg-6">Sign in</a>
                                    <button type="submit" onclick="RegisterUser()" class="btn btn-submit col-lg-6 pull-right">Registration</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
