@using DropshipPlatform.BLL.Services;
@using DropshipPlatform.BLL.Models;

@{
    ViewBag.Title = "Pickup Product";
    <link href="~/Content/custom/my-product.css" rel="stylesheet" />
    <link href="~/Content/custom/product-management.css" rel="stylesheet" />

}



<section class="mt-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4">
                <label for="exampleFormControlSelect1">Product Category</label>
                @if (ViewBag.AliCategory != null)
                {
                    @Html.DropDownList("ddlProductCat", new SelectList(ViewBag.AliCategory, "CategoryID", "Name"), "All", new { @class = "selectpicker form-control", @title = "Product Category", @data_live_search = "true" })
                }
                else
                {
                    @Html.DropDownList("ddlProductCat", new List<SelectListItem> { new SelectListItem { Text = "", Value = "" }, }, new { @class = "selectpicker form-control" })
                }
            </div>
            @if (SessionManager.GetUserSession().LoggedUserRoleName == StaticValues.seller)
            {
                <div class="col-lg-4">
                    <label for="">Filter By</label>
                    <select class="selectpicker form-control" title="Select" id="ddlPickupFilter">
                        <option value="0">All</option>
                        <option value="1">Picked products</option>
                        <option value="2">Unpicked products</option>
                        <option value="3">InProgress products</option>
                    </select>
                </div>
            }
            <div class="col-lg-4">
                <label for="exampleFormControlSelect1">Bulk Actions</label>
                <select class="selectpicker form-control" title="Select" id="ddlProductBulkAction">
                    <option value="">--Select --</option>
                    @if (SessionManager.GetUserSession().LoggedUserRoleName == StaticValues.seller)
                    {
                        <option value="1">Pick selected products</option>
                    }
                    @if (SessionManager.GetUserSession().LoggedUserRoleName != StaticValues.seller)
                    {
                        <option value="2">Online</option>
                        <option value="3">Offline</option>
                    }
                    </select>
            </div>
        </div>
    </div>
</section>

<section class="mt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 table-responsive  mb-5">
                <table id="ProductsDt" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th scope="col">Product Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Cost (USD)</th>
                            <th scope="col">Inventory</th>
                            <th scope="col">Shipping Weight (KG)</th>
                            <th scope="col">Product Selling Price(USD)</th>
                            <th scope="col" data-orderable="false">
                                <label class="rememberme mt-checkbox">
                                    <input type="checkbox" id="chkAllProduct" name="remember" value="0">
                                    <span></span>&nbsp;Check All
                                </label>
                            </th>
                            <th scope="col">Product Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        var user = "@SessionManager.GetUserSession().LoggedUserRoleName";
        BindData(user);
    });
</script>
<script src="~/Scripts/custom/PickupProducts.js?v=2020.04.16"></script>